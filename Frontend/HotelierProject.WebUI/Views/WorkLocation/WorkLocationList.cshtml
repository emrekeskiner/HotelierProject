@model List<ResultWorkLocationDto>
@{
    ViewData["Title"] = "WorkLocationList";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
    int number = 0;
}

<table class="table table-xs mb-0">
    <thead>
        <tr>
            <th>#</th>
            <th>Lokasyon Adı</th>
            <th>Şehir</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            number++;
            <tr>
                <th>@number</th>
                <td>@item.WorkLocationName</td>

                <td>
                    <span>@item.CityName</span>
                </td>
                <td>
                    <a href="/WorkLocation/DeleteWorkLocation/@item.WorkLocationId" class="btn btn-danger">Sil</a>
                    <a href="/WorkLocation/UpdateWorkLocation/@item.WorkLocationId" class="btn btn-success">Güncelle</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<a href="/WorkLocation/AddWorkLocation/" class="btn btn-info mt-2"><i class="icon-magnifier-add"></i>Yeni Lokasyon</a>

