@model List<HotelierProject.WebUI.Models.Role.RoleAssignViewModel>
@{
    ViewData["Title"] = "AssignRole";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<div class="card-body">
    <h4 class="card-title">Yetki Ekle</h4>
    <div class="basic-form">
        <form method="post">
            
            @for (int i = 0; i < Model.Count; i++)
            {
                <div class="form-check">
                    <input type="hidden" asp-for="@Model[i].RoleId" />
                    <input type="hidden" asp-for="@Model[i].RoleName" />
                    <input type="checkbox" asp-for="@Model[i].RoleExist"  class="form-check-input mt-1"/>
                    <label class="form-check-label" for="@Model[i].RoleExist">@Model[i].RoleName</label>
                    </div>
                }
             

            <button type="submit" class="btn btn-primary mt-2"><i class="fa fa-save"></i> Kaydet</button>
        </form>
    </div>
</div>

