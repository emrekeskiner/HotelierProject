@model List<ResultBookingDto>

<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                <div class="active-member">
                    <div class="table-responsive">
                        <table class="table table-xs mb-0">
                            <thead>
                                <tr>
                                    <th>Ad Soyad</th>
                                    <th>Giriş - Çıkış Tarihi</th>
                                    <th>Yetişkin Sayısı</th>
                                    <th>Oda Sayısı</th>
                                    <th>Özel İstek</th>
                                    <th>Ülke - Şehir</th>
                                    <th>Durum</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                    <td>@item.Name</td>
                                        <td>
                                            <span>@item.CheckIn.ToString("dd.MM.yyyy")</span>
                                            <span class="m-0 pl-3">@item.CheckOut.ToString("dd.MM.yyyy")</span>
                                        </td>
                                        <td>@item.AdultCount</td>
                                        <td>@item.RoomCount</td>
                                        <td>@item.SpecialRequest</td>
                                        <td>
                                            <span>@item.Country</span>
                                            <span class="m-0 pl-3">@item.City</span>
                                        </td>
                                    
                                            @if(item.Status == "Bekletildi")
                                            {
                                            <td>
                                                <i class="fa fa-circle-o text-danger  mr-2"></i>
                                                @item.Status
                                            </td>
                                            }
                                        else if (item.Status == "Onay Bekliyor")
                                            {
                                            <td>
                                                <i class="fa fa-circle-o text-warning  mr-2"></i>
                                                @item.Status
                                            </td>
                                            }
                                        else if (item.Status == "Onaylandı")
                                            {
                                            <td>
                                                <i class="fa fa-circle-o text-success  mr-2"></i>
                                                @item.Status
                                            </td>
                                            }

                                           
                                       
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>