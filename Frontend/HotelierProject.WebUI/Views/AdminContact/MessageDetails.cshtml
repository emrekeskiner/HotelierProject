@model ResultSendMessageDto
@{
    ViewData["Title"] = "MessageDetails";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<div class="col-lg-12">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Mesaj Detayları</h4>
            @await Html.PartialAsync("/Views/AdminContact/SidebarAdminContactPartial.cshtml")
            <div class="email-right-box">

                <div class="read-content">
                    <div class="media pt-5">
                        @* <img class="mr-3 rounded-circle" src="images/avatar/1.jpg"> *@
                        <div class="media-body">
                            <h5 class="m-b-3">@Model.SenderName</h5>
                            <p class="m-b-2">@Model.Date.ToString("dd.MMM.yyyy")</p>
                        </div>

                    </div>
                    <hr>
                    <div class="media mb-4 mt-1">
                        <div class="media-body">
                            <span class="float-right">@Model.Date.ToString("mm:ss")</span>
                            <h4 class="m-0 text-primary">@Model.Title</h4><small class="text-muted">Gönderen Mail : @Model.SenderMail</small>
                        </div>
                    </div>
                    @Model.Content
                    <hr>
                   
                    <div class="form-group p-t-15">
                        <textarea class="w-100 p-20 l-border-1" name="" id="" cols="30" rows="5" placeholder="Cevap mesajınızı yazınız."></textarea>
                    </div>
                </div>
                <div class="text-right">
                    <button class="btn btn-primaryw-md m-b-30" type="button">Yanıtla</button>
                </div>

            </div>
        </div>
    </div>
</div>


