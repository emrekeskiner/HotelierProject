@model List<ResultBookingDto>
@{
    ViewData["Title"] = "Rezervasyon Listesi";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
    int count = 0;
}


    <div class="card">
        <div class="card-body">
            <div class="card-title">
                <h4>Rezervasyon Listesi</h4>
            </div>
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Misafir</th>
                            <th>Giriş Tarihi</th>
                            <th>Çıkış Tarihi</th>
                            <th>Durum</th>
                            <th>Onayla</th>
                            <th>İptal Et</th>
                            <th>Beklet</th>
                            <th>Güncelle</th>
                            <th>Detaylar</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                        count++;
                        <tr>
                            <th>@count</th>
                            <td>@item.Name</td>
                            <td>@item.CheckIn.ToString("dd.MM.yyyy")</td>
                            <td>@item.CheckOut.ToString("dd.MM.yyyy")</td>
                            <td>
                                <span class="badge badge-primary px-4">@item.Status</span>
                            </td>
                            <td><a href="/BookingAdmin/ChangeReservationStatus/@item.BookingId?status=Onaylandı" class="btn btn-outline-primary">Onayla</a></td>
                            <td><a href="/BookingAdmin/ChangeReservationStatus/@item.BookingId?status=İptal Edildi" class="btn btn-outline-danger">İptal Et</a></td>
                            <td><a href="/BookingAdmin/ChangeReservationStatus/@item.BookingId?status=Bekletildi" class="btn btn-outline-warning">Beklet</a></td>
                            <td><a href="/BookingAdmin/UpdateBooking/@item.BookingId" class="btn btn-outline-info">Güncelle</a></td>
                            <td><a href="#" class="btn btn-outline-dark">Detaylar</a></td>
                        </tr>
                        }
                       
                    </tbody>
                </table>
            </div>
        </div>
    </div>


